.message-page .message-header {
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 300rpx;
  border-bottom: 1rpx solid rgb(248, 249, 250);
}
.message-page .message-nav {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-bottom: 40rpx;
}
.message-page .message-nav view {
  flex: 1;
}
.message-page .message-nav image {
  width: 100%;
  height: 150rpx;
}
.message-page .message-nav text {
  font-size: 30rpx;
  margin-left: 64rpx;
}
.message-page .message-space {
  height: 20rpx;
  background-color: rgb(248, 249, 250);
}
.message-item .message-one,.message-item .message-two{
  display: flex;
  padding-top: 14rpx;
}
.message-item {
  padding: 24rpx 20rpx 0 20rpx;
}
.message-item .logo {
  flex: 1;
}
.message-item image {
  width: 100rpx;
  height: 100rpx;
}
.message-item .text {
  flex: 7;
  padding-left: 20rpx;
  line-height: 50rpx;
}
.message-item .text .title {
  font-size: 36rpx;
  font-weight: bold;
}
.message-item .text .content {
  font-size: 24rpx;
  padding-left: 6rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgb(248, 249, 250);
}